@model OnlineShop.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .content {
        margin: 0 25%;
        padding: 5% 10%;
        width: 50%;
        @*box-shadow: 1em 1em 1em gray;*@
        @*text-align: center;*@
    }
    .form-horizontal {

        padding: 10% 10%;
        background: #F5F5F5;
        @*box-shadow: 1em 1em 1em gray;*@
         @*text-align: center;*@

    }
    h4 {
        color: red;
        font-size: 200%;
        font-weight: bold;
        text-align:center;
    }
    @*.btn-facebook {
        background: blue;
        color:white;
    }*@
</style>

<div class="content">
    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h4>Đăng Nhập</h4>
        <hr />
        <div class="form-horizontal">

            <div class="form-group row">
                <label class="control-label col-md-3"></label>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                @*@Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-3" })*@
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Tên đăng nhập" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @*@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3" })*@
                <div class="col-md-12">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @value = @ViewBag.Password, @placeholder = "Mật khẩu" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @*@Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "control-label col-md-3" })*@
                <div class="col-md-2">
                    @Html.CheckBoxFor(model => model.RememberMe, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "control-label col-md-3" })
            </div>

            <div class="form-group row">

                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Đăng Nhập" class="btn btn-success" style="width:100%" />
                </div>
            </div>
            <div class="form-group row">

                <div class="col-md-offset-2 col-md-12">

                    <a href="/User/LoginFacebook" class="btn btn-primary" style="width:100%">
                        <i class="fab fa-facebook-square">  |  Đăng Nhập Bằng Facebook</i>
                    </a>
                </div>
            </div>
            <div class="form-group row">

                <div class="col-md-12" style="text-align:right">
                    <a href="/dang-ki">
                        <i>Đăng kí</i>
                    </a>
                </div>
            </div>
        </div>
    }

</div>